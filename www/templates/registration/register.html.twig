{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="register-container">
		<div class="register-card">
			<h1 class="register-title">Create Account</h1>
			<p class="register-subtitle">Join us today</p>

			{% if form_errors(registrationForm) %}
				<div class="form-errors">
					{{ form_errors(registrationForm) }}
				</div>
			{% endif %}

			{{ form_start(registrationForm, {'attr': {'class': 'register-form'}}) }}

			<div class="form-group">
				{{ form_label(registrationForm.firstname, null, {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-input', 'placeholder': 'Enter your first name'}}) }}
				{{ form_errors(registrationForm.firstname) }}
			</div>

			<div class="form-group">
				{{ form_label(registrationForm.lastname, null, {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-input', 'placeholder': 'Enter your last name'}}) }}
				{{ form_errors(registrationForm.lastname) }}
			</div>

			<div class="form-group">
				{{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(registrationForm.email, {'attr': {'class': 'form-input', 'placeholder': 'Enter your email'}}) }}
				{{ form_errors(registrationForm.email) }}
			</div>

			<div class="form-group">
				{{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-input', 'placeholder': 'Enter your password'}}) }}
				{{ form_errors(registrationForm.plainPassword) }}
			</div>

			<div class="form-group checkbox-group">
				{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-checkbox'}}) }}
				{{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'checkbox-label'}}) }}
				{{ form_errors(registrationForm.agreeTerms) }}
			</div>

			<button type="submit" class="btn btn-register">Register</button>

			{{ form_end(registrationForm) }}

			<div class="login-link">
				<p>Already have an account?
					<a href="{{path('app_login')}}" class="link-login">Login here</a>
				</p>
			</div>
		</div>
	</div>
{% endblock %}
